version_matcher = versions.first == "n-a" ? '*' : '*.*.*'

field "Backend/2xx", {
		data: "sum(stats.timers.MireVeja.deliver.#{app}.*.#{version_matcher}.MISS.2*.count_ps)",
		alias: "Backend/2xx",
		color: "#7A9942"
}
field "Backend/3xx", {
		data: "sum(stats.timers.MireVeja.deliver.#{app}.*.#{version_matcher}.MISS.3*.count_ps)",
