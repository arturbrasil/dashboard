app = @properties[:app]
versions = @properties[:version]
title       "Todas as respostas" 
vtitle      "respostas/s"
area        :stacked
description "Requests respondidos com o cache ou backend"
linewidth 2
draw_null_as_zero true

# field "Varnish", {
